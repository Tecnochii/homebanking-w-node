<%- include("template/header", {tituloWeb: "Inicio" , styles: "css/index.css" }) %>

    <div id="app">
        <div>

        </div>

        <main>


            <form @submit.prevent="completarRegistro">
                <div class="login-wrap mt-4">
                    <div class="login-html">
                        <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1"
                            class="tab">Sign In</label>
                        <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Sign
                            Up</label>
                        <div class="login-form">
                            <div class="sign-in-htm">
                                <div class="group">
                                    <label for="user" class="label">Username</label>
                                    <input id="user" v-model="emailLog" type="text" class="input">
                                </div>
                                <div class="group">
                                    <label for="password" class="label">Password</label>
                                    <input id="password" v-model="pwdLog" type="password" class="input"
                                        data-type="password">
                                </div>

                                <div class="group">
                                    <input type="submit" class="button" @click="login" value="Sign In">
                                </div>
                                <div class="hr"></div>
                                <div class="foot-lnk">
                                    <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2"
                                        class="tab" style="cursor: pointer;">Register</label>
                                </div>
                            </div>
                            <div class="sign-up-htm">
                                <div class="group">
                                    <label for="name" class="label">First Name</label>
                                    <input id="name" v-model="Name" type="text" class="input">
                                </div>
                                <div class="group">
                                    <label for="lName" class="label">Last Name</label>
                                    <input id="lName" v-model="lName" type="text" class="input">
                                </div>
                                <div class="group">
                                    <label for="email" class="label">Email Address</label>
                                    <input id="email" v-model="email" type="email" class="input">
                                </div>
                                <div class="group">
                                    <label for="pass" class="label">Password</label>
                                    <input id="pass" v-model="pwd" type="password" class="input" data-type="password"
                                        required>
                                </div>
                                <div class="group">
                                    <input type="button" class="button" value="Sign In" @click="completarRegistro">
                                </div>
                                <div class="hr"></div>
                                <div class="foot-lnk">
                                    <label for="tab-1">Already Member?</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </main>
    </div>


    <script src=" https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
        crossorigin="anonymous"></script>
    <!-- script axios -->
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <!-- script vue -->
    <script src="https://unpkg.com/vue@next"></script>
    <!-- swal -->
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <!-- mis scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="js/index.js"></script>
    <%- include("template/footer")%>